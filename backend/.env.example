# ===========================================
# WingsEd Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
DATABASE_URL="postgresql://wingsed:wingsed_dev_password@localhost:5432/wingsed?schema=public"

# Direct connection URL (bypasses connection pooler; used for Prisma migrations)
DIRECT_URL="postgresql://wingsed:wingsed_dev_password@localhost:5432/wingsed?schema=public"

# --------------------------------------------
# Clerk Authentication
# --------------------------------------------
# Get these from: https://dashboard.clerk.com/apps/{your-app}/api-keys
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Clerk Webhook Secret (for syncing users)
# Get from: Clerk Dashboard > Webhooks > Create Endpoint
CLERK_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# --------------------------------------------
# Typesense Search
# --------------------------------------------
TYPESENSE_HOST="localhost"
TYPESENSE_PORT="8108"
TYPESENSE_PROTOCOL="http"
TYPESENSE_API_KEY="wingsed_typesense_dev_key"

# --------------------------------------------
# WhatsApp Configuration
# --------------------------------------------
WHATSAPP_PHONE_NUMBER="918658805653"

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV="development"
PORT=4000

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000"

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
THROTTLE_TTL=900000
THROTTLE_LIMIT=100
